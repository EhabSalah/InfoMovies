<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/popular_movie_poster_cardView_layout"
    style="@style/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="1dp"
    android:orientation="vertical"

    app:cardBackgroundColor="@color/item_card_background"><!--app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
     android:numColumns="2"-->
    <!---->

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/popular_poster_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:id="@+id/popular_poster_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/translucent_black">

            <TextView
                android:id="@+id/popular_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="#1"
                android:textColor="@color/white_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/popular_poster_average_vote_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/popular_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:padding="1dp"
                    android:text="0000"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/poster_average_rate_font_size" />

                <ImageView
                    android:id="@+id/popular_star"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="1dp"
                    android:src="@drawable/star" />

            </LinearLayout>


        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>


</android.support.v7.widget.CardView>