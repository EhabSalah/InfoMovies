<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_rated_row_layout"
    style="@style/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="1dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/item_card_background"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/top_rated_poster"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:paddingBottom="3dp"
            android:paddingStart="3dp"
            android:paddingTop="3dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/top_rated_movie_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="Movie Name"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/top_rated_movie_title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/top_rated_average_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.1"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/top_rated_movie_average_rate" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/star" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_event" />

                    <TextView
                        android:id="@+id/top_rated_release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="31/10/1995"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/top_rated_movie_release_date" />
                </LinearLayout>

                <TextView
                    android:id="@+id/top_rated_geners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2.5dp"
                    android:maxLines="2"
                    android:text="Crime, Romance, Thriller"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/top_rated_movie_geners"
                    android:textStyle="italic"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/top_rated_overView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:maxLines="4"
                android:text="Top Rated movie's OverView"
                android:textColor="@color/white_color"
                android:textSize="@dimen/top_rated_movie_overView" />

            <View
                android:id="@+id/top_rated_line_view"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/top_rated_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="More Info"
                android:textColor="@color/white_color"
                android:textSize="@dimen/top_rated_movie_more_info" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>