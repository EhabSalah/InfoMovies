<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_fragment_overview_layout"
    android:layout_marginBottom="@dimen/margin_between_main_layouts_movie_fragment"
    app:cardBackgroundColor="@color/main_card_view_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white_color"
            android:textSize="@dimen/movie_fragment_title_text_size"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/movie_fragment_overview"
            android:textSize="@dimen/movie_fragment_movie_overview_text_size"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white_color"
            android:lineSpacingExtra="5dp"
            />
    </LinearLayout>


</android.support.v7.widget.CardView>