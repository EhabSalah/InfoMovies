<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between_main_layouts_movie_fragment"
    android:id="@+id/movie_fragment_belongs_to_layout"
    app:cardBackgroundColor="@color/main_card_view_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Part Of"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textColor="@color/white_color"
            android:textSize="@dimen/movie_fragment_movie_title_text_size"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/belongs_to_tv"
            android:textColor="@android:color/white"
            android:textSize="@dimen/movie_fragment_movie_belongs_to_text_size"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>