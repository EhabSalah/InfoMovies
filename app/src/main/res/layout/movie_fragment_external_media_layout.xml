<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_externals_media_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between_main_layouts_movie_fragment"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/main_card_view_background_color"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:text="More Details"
            android:textColor="@color/white_color"
            android:textSize="@dimen/movie_fragment_movie_title_text_size"
            android:textStyle="bold"

            />

        <LinearLayout
            android:id="@+id/movie_fragment_home_page_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie's home page "
                android:textColor="@color/white_color"
                android:textSize="@dimen/movie_fragment_movie_sub_title_text_size"
                android:textStyle="normal"

                />

            <TextView
                android:id="@+id/movie_fragment_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="here"
                android:textColor="@color/click_here_for_home_page_color"
                android:textSize="@dimen/movie_fragment_movie_home_page_click_here_text_size"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/movie_fragment_imdp_logo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imdb" />
    </LinearLayout>
</android.support.v7.widget.CardView>